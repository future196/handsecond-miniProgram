/* pages/mine/mine.wxss */
page{
  background: #f5f5f5;
}

.header{
  background: white;
  text-align: center;
  padding:30rpx;
}
.header image{
  height:150rpx;
  width:150rpx;
  border-radius: 150rpx;
  background: lightgrey;
  margin-top:50rpx;
}

.header view{
  padding:20rpx;
  font-size: 35rpx;
}

.lists{
  background: white;
  margin:30rpx 0;
}

.lists .list{
  display: flex;
  padding:30rpx 0;
  margin:0 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.lists .list image{
  height:40rpx;
  width:40rpx;
  padding:0 20rpx;
}

.lists .list text{
  flex:1;
}